@model StudentsEnrollmentSystem.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Student Enrollment System | Login</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts: Poppins for modern clean look -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --primary: #F3BD00;
            --secondary: #757575;
            --light: #F3F6F8;
            --dark: #0C2B4B;
        }

        body {
            background: url('https://images.unsplash.com/photo-1596495577886-d920f1a3f9f2?auto=format&fit=crop&w=1350&q=80') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Poppins', sans-serif;
            color: var(--dark);
            padding: 20px;
            margin: 0;
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(12, 43, 75, 0.85);
            z-index: 0;
        }

        .card {
            position: relative;
            z-index: 1;
            background-color: var(--light);
            border-radius: 1rem;
            padding: 2.5rem 2.5rem 3rem 2.5rem;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            color: var(--dark);
            text-align: center;
        }

        h2 {
            margin-bottom: 2rem;
            font-weight: 700;
            color: var(--primary);
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.25);
            font-size: 2.5rem;
        }

        label {
            font-weight: 600;
            color: var(--dark);
            text-align: left;
            display: block;
            margin-bottom: 0.5rem;
            font-size: 1.05rem;
        }

        .form-control {
            border: 2px solid var(--secondary);
            border-radius: 0.6rem;
            padding: 0.75rem 1.25rem;
            font-size: 1.1rem;
            transition: border-color 0.3s ease;
            color: var(--dark);
            font-weight: 500;
        }

            .form-control::placeholder {
                color: var(--secondary);
                font-style: italic;
            }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 10px var(--primary);
                outline: none;
            }

        .btn-primary {
            background-color: var(--primary);
            border: none;
            font-weight: 700;
            font-size: 1.3rem;
            padding: 0.85rem;
            border-radius: 0.75rem;
            width: 100%;
            margin-top: 1.5rem;
            transition: background-color 0.3s ease;
            box-shadow: 0 4px 12px rgba(243, 189, 0, 0.6);
            cursor: pointer;
            user-select: none;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #d3a900;
                box-shadow: 0 6px 18px rgba(211, 169, 0, 0.8);
            }

        a {
            color: var(--secondary);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
            font-size: 1rem;
            user-select: none;
        }

            a:hover {
                color: var(--primary);
                text-decoration: underline;
            }

        .footer-text {
            margin-top: 1.5rem;
            font-size: 1rem;
            color: var(--secondary);
            user-select: none;
        }
    </style>
</head>
<body>

    <div class="overlay"></div>

    <div class="card shadow-lg">
        <h2>Student Enrollment Login</h2>
        <form asp-controller="Account" asp-action="Login" method="post" novalidate>
            <div class="mb-4 text-start">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="mb-4 text-start">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <p class="footer-text mt-3">
            <a  asp-controller="Account" asp-action="ForgotPass">Forgot Password?</a> |
            @* <a href="/sign-up">Create New Account</a> *@
            <a asp-controller="Account" asp-action="Signin">Create New Account</a>
        </p>
    </div>

</body>
</html>
